    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addEditTypeTitle">Nuova Tipologia</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type='hidden' class='hiddenId' value='' />
        <div class="continer-fluid">
          <div class="row">
            <div class="col-md-6 col-12 mb-3">
              <label for="nomeInput" class="form-label">Nome</label>
              <input type="text" name="nome" class="form-control nome" id="nomeInput" aria-describedby="nomeHelp">
              <div id="nomeHelp" class="form-text">Inserisci il nome della tipologia.</div>
            </div>
            <div class="col-md-6 col-12 mb-3">
              <label for="descrizioneInput" class="form-label">Descrizione</label>
              <textarea rows="3" name="descrizione" class="form-control" id="descrizioneInput" aria-describedby="descrizioneHelp"></textarea>
